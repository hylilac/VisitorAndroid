<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0eff5">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@color/colorPrimary">

            <TextView
                android:id="@+id/create_company_top_bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="创建公司"
                android:textColor="#fff"
                android:textSize="18sp" />

            <Button
                android:id="@+id/create_company_btn_back"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:drawableLeft="@drawable/ic_back"
                android:text="公司管理"
                android:textColor="#fff"
                android:textSize="14dp" />

        </RelativeLayout>

        <EditText
            android:id="@+id/et_createcompany"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/shapedrawable"
            android:gravity="center_vertical"
            android:layout_margin="15dp"
            android:hint="请输入公司名字"
            android:textColorHint="#c4c4c6"
            android:textColor="#000000"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/btn_create_company"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#007aff"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="创建"
            android:textColor="#fff"
            android:textSize="20sp"/>

    </LinearLayout>

</LinearLayout>