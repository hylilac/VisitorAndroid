<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fb_company"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0eff5">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@color/colorPrimary">

            <TextView
                android:id="@+id/manage_top_bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="公司管理"
                android:textColor="#fff"
                android:textSize="18sp" />

            <Button
                android:id="@+id/manage_btn_back"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:drawableLeft="@drawable/ic_back"
                android:text="我"
                android:textColor="#fff"
                android:textSize="14dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/mange1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/txt_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="20sp"/>

                <Button
                    android:id="@+id/join_company"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#007aff"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="35dp"
                    android:text="加入公司"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="20sp"/>

                <Button
                    android:id="@+id/create_company"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#007aff"
                    android:layout_margin="15dp"
                    android:text="创建公司"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="20sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/mange2"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:layout_marginTop="30dp">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#d3d2d7"/>

                <TextView
                    android:id="@+id/bm_manage"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#fff"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_navstart"
                    android:drawableRight="@drawable/ic_navend"
                    android:text="部门管理"
                    android:textColor="#000"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#cccccc"
                    android:layout_marginLeft="15dp"/>

                <TextView
                    android:id="@+id/ry_manage"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#fff"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_navstart"
                    android:drawableRight="@drawable/ic_navend"
                    android:text="人员管理"
                    android:textColor="#000"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#cccccc"
                    android:layout_marginLeft="15dp"/>

                <TextView
                    android:id="@+id/order_list_manage"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#fff"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_navstart"
                    android:drawableRight="@drawable/ic_navend"
                    android:text="预约列表"
                    android:textColor="#000"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#cccccc"
                    android:layout_marginLeft="15dp"/>

                <TextView
                    android:id="@+id/check_manage"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#fff"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_navstart"
                    android:drawableRight="@drawable/ic_navend"
                    android:text="审核"
                    android:textColor="#000"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#cccccc"
                    android:layout_marginLeft="15dp"/>

                <TextView
                    android:id="@+id/authority_manage"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#fff"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_navstart"
                    android:drawableRight="@drawable/ic_navend"
                    android:text="权限分配"
                    android:textColor="#000"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#cccccc"
                    android:layout_marginLeft="15dp"/>

                <TextView
                    android:id="@+id/order_manage"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#fff"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_navstart"
                    android:drawableRight="@drawable/ic_navend"
                    android:text="预约单"
                    android:textColor="#000"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#d3d2d7"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>