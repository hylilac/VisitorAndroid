<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fb_order_manage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0eff5"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@color/colorPrimary">
            <TextView
                android:id="@+id/order_manage_top_bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="预约单"
                android:textColor="#fff"
                android:textSize="18sp" />

            <Button
                android:id="@+id/order_manager_btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:drawableLeft="@drawable/ic_back"
                android:text="返回"
                android:textColor="#fff"
                android:textSize="14dp" />

        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/order_manage_visitor"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/shapedrawable"
                android:gravity="center_vertical"
                android:layout_margin="15dp"
                android:hint="申请人"
                android:textColorHint="#c4c4c6"
                android:textColor="#000000"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/order_manage_car"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/shapedrawable"
                android:gravity="center_vertical"
                android:hint="车牌号码"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textColorHint="#c4c4c6"
                android:textColor="#000000"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/order_manage_interviewee"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/shapedrawable"
                android:gravity="center_vertical"
                android:layout_margin="15dp"
                android:hint="拜访对象"
                android:textColorHint="#c4c4c6"
                android:textColor="#000000"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/order_manage_company"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/shapedrawable"
                android:gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:hint="拜访公司"
                android:focusable="false"
                android:textColorHint="#c4c4c6"
                android:textColor="#000000"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/order_manage_time"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/shapedrawable"
                android:gravity="center_vertical"
                android:layout_margin="15dp"
                android:hint="拜访时间"
                android:focusableInTouchMode="false"
                android:textColorHint="#c4c4c6"
                android:textColor="#000000"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/order_manage_tel"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/shapedrawable"
                android:gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:hint="手机号码"
                android:textColorHint="#c4c4c6"
                android:inputType="phone"
                android:textColor="#000000"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/order_manage_reason"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/shapedrawable"
                android:gravity="center_vertical"
                android:layout_margin="15dp"
                android:hint="拜访事由"
                android:textColorHint="#c4c4c6"
                android:textColor="#000000"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/order_manage_btn_commit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#007aff"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="提交预约信息"
                android:textColor="#fff"
                android:textSize="20sp"/>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>