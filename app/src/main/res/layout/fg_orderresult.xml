<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/fb_order_result"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="#f0eff5">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@color/colorPrimary">

            <Button
                android:id="@+id/order_result_btn_back"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:drawableLeft="@drawable/ic_back"
                android:text="预约列表"
                android:textColor="#fff"
                android:textSize="14dp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="#00000000"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:text="申  请  人："
                android:textColor="#000000"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/order_result_visitor"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="3"
                android:background="#00000000"
                android:gravity="center_vertical"
                android:text="xxx"
                android:textColor="#000"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="#00000000"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:text="拜访对象："
                android:textColor="#000000"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/order_result_interviewee"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="3"
                android:background="#00000000"
                android:gravity="center_vertical"
                android:text="xxx"
                android:textColor="#000"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="#00000000"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:text="拜访时间："
                android:textColor="#000000"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/order_result_time"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="3"
                android:background="#00000000"
                android:gravity="center_vertical"
                android:text="yyyy-mm-dd"
                android:textColor="#000"
                android:textSize="14sp"/>
        </LinearLayout>

        <Button
            android:id="@+id/order_result_btn_accept"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#007aff"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="接受"
            android:textColor="#fff"/>

        <Button
            android:id="@+id/order_result_btn_refuse"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#d6111b"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="拒绝"
            android:textColor="#fff"/>

    </LinearLayout>
</FrameLayout>