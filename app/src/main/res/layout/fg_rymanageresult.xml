<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/fb_ry_result"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="#f0eff5">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@color/colorPrimary">

            <TextView
                android:id="@+id/bm_manage_top_bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="testhy"
                android:textColor="#fff"
                android:textSize="18sp" />

            <Button
                android:id="@+id/ry_result_btn_back"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:drawableLeft="@drawable/ic_back"
                android:text="人员管理"
                android:textColor="#fff"
                android:textSize="14dp" />

        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:layout_marginTop="40dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d6d5da"/>

            <TextView
                android:id="@+id/ry_result_username"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#00000000"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical"
                android:text="员工名字："
                android:textColor="#000000"
                android:textSize="14sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cacaca"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/ry_result_bm"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#00000000"
                android:drawableRight="@drawable/ic_navend"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical"
                android:text="部门："
                android:textColor="#000000"
                android:textSize="14sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d6d5da"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>