<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fb_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0eff5">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@color/colorPrimary">

            <TextView
                android:id="@+id/setting_top_bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="设置"
                android:textColor="#fff"
                android:textSize="18sp" />

            <Button
                android:id="@+id/setting_btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:drawableLeft="@drawable/ic_back"
                android:text="我"
                android:textColor="#fff"
                android:textSize="14dp" />

        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:layout_marginTop="30dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d3d2d7"/>

            <TextView
                android:id="@+id/nav_fun"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#fff"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:drawableRight="@drawable/ic_navend"
                android:text="未知功能"
                android:textColor="#000"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/nav_password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#fff"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:drawableRight="@drawable/ic_navend"
                android:text="修改密码"
                android:textColor="#000"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d3d2d7"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:layout_marginTop="30dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d3d2d7" />

            <Button
                android:id="@+id/nav_quit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#fff"
                android:text="退出登录"
                android:textColor="#ff0000"
                android:gravity="center"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d3d2d7"/>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>